#include "main.h"
/**
*printwcap_s - capital S
*@format: format
*@idx: index
*@args: args
*Return: int
*/
int printwcap_s(const char *format, int idx, va_list args)
{int z = 0, counter =0;
char *str;

str = va_arg(args, char *);
if (!str)
{str = "(null)";
}
for (z = 0; str[z]; z++)
{
if (str[z] < 32 || str[z] >= 127)
{
_putchar('\\');
_putchar('x');
counter += 2;
if ((str[z] / 16) < 10)
{_putchar((str[z] / 16) + '0');
}
else
{_putchar((str[z] / 16) - 10 + 'A');
}
if ((str[z] % 16) < 10)
{_putchar((str[z] % 16) + '0');
}
else
{_putchar((str[z] % 16) - 10 + 'A');
}counter += 2;
}
else
{_putchar(str[z]);
counter++;
}
}
return (counter);
}
